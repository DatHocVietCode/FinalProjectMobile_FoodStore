<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF">

    <ImageView
        android:id="@+id/activity_payment_notification_img"
        android:layout_width="256dp"
        android:layout_height="256dp"
        android:src="@drawable/confirm_payment"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.314" />

    <TextView
        android:id="@+id/activity_payment_notification_tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Congratulations!"
        android:fontFamily="@font/sen"
        android:textSize="36sp"
        android:textColor="#111A2C"
        android:textStyle="bold"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/activity_payment_notification_img"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/activity_payment_notification_tvDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="350dp"
        android:maxLines="2"
        android:text="You successfully maked a payment,enjoy our service!"
        android:fontFamily="@font/sen"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#525C67"
        android:layout_marginTop="24dp"
        android:layout_gravity="center"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/activity_payment_notification_tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/activity_payment_notification_btnTrackrder"
        android:layout_width="350dp"
        android:layout_height="52dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/rectangle_corner_radius_ff7622"
        android:clickable="true"
        android:clipToOutline="true"
        android:focusable="true"
        android:fontFamily="@font/sen"
        android:foreground="?attr/selectableItemBackground"
        android:text="BACK TO HOME"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:textStyle="bold"
        app:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:layout_editor_absoluteX="24dp" />
</androidx.constraintlayout.widget.ConstraintLayout>