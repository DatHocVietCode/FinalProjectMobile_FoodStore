<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:layout_margin="8dp"
    android:background="#FFFFFF">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F0F5FA">

        <!-- Hình ảnh bên trái -->
        <com.example.app_foodstore.CustomView.VoucheLabelView
            android:id="@+id/voucherImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:text="DISCOUNT!"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:background="#FF7622"/>

        <!-- Nội dung bên phải -->
        <com.example.app_foodstore.CustomView.VoucherContentLayout
            android:orientation="vertical"
            android:padding="12dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center_vertical"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/item_row_voucher_tv_Title"
                android:text="Giảm 50%"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@android:color/black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/textViewDescription"
                android:text="Áp dụng cho đơn từ 200K"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"/>
        </com.example.app_foodstore.CustomView.VoucherContentLayout>
        <!--<Button
            android:id="@+id/item_row_voucher_btnGet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Get it!"
            android:background="@drawable/rectangle_corner_radius_ff7622"
            android:clipToOutline="true"
            app:backgroundTint="@null"
            android:layout_marginEnd="4dp"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>-->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="#FFFFFF">
            <TextView
                android:id="@+id/item_row_voucher_tvSave"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Save_Voucher"
                android:fontFamily="@font/sen"
                android:textSize="24dp"
                android:textColor="#ff7622"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="#FFFFFF"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/item_row_voucher_tvDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Delete_Voucher"
                android:fontFamily="@font/sen"
                android:textSize="24dp"
                android:textColor="#FF0000"
                android:textStyle="bold"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:background="#FFFFFF"
                card_view:layout_constraintTop_toTopOf="parent"
                card_view:layout_constraintBottom_toBottomOf="parent"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
