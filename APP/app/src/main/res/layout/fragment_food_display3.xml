<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="4dp"
    >
    <!-- Card chứa text -->
    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_food_display3_cardview_bottom"
        android:layout_width="153dp"
        android:layout_height="102dp"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginTop="40dp"
        app:cardCornerRadius="8dp"
        android:elevation="0dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="bottom|center_horizontal"
            android:paddingTop="32dp"
            android:paddingBottom="12dp"
            >

            <TextView
                android:id="@+id/fragment_food_display3_tv_foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:fontFamily="@font/sen"
                android:text="Food Name"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/fragment_food_display3_tv_categoryName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Category Name"
                android:fontFamily="@font/sen"
                android:textColor="#B7BBCB"
                android:textSize="16sp"
                android:gravity="center"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- Card chứa ảnh, nổi lên -->
    <androidx.cardview.widget.CardView
        android:id="@+id/fragment_food_display3_cardview_top"
        android:layout_width="122dp"
        android:layout_height="84dp"
        android:layout_gravity="top|center_horizontal"
        app:cardCornerRadius="16dp"
        android:elevation="8dp"
        android:translationY="-4dp">

        <ImageView
            android:id="@+id/fragment_food_display3_imgFood"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/food_sample" />
    </androidx.cardview.widget.CardView>

</FrameLayout>
