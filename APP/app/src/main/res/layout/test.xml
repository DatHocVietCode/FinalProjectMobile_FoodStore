<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/payment_cardView_bottomSheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom"
    android:elevation="@dimen/design_bottom_sheet_modal_elevation"
    app:cardCornerRadius="32dp"
    android:paddingBottom="16dp"
    android:backgroundTint="#FFFFFF"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
    android:padding="8dp"
    android:visibility="visible"
    >
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">
        <ImageButton
            android:id="@+id/payment_cardView_bottomSheet_expandbtn"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:src="@drawable/bottom_sheet_navigation"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:background="#FFFFFF"
            />
        <LinearLayout
            android:id="@+id/payment_ln_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="24dp"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:gravity="center_vertical"
            app:layout_constraintTop_toBottomOf="@+id/payment_cardView_bottomSheet_expandbtn">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="TOTAL: "
                android:fontFamily="@font/sen"
                android:textSize="12sp"
                android:textColor="#A0A5BA"
                android:layout_marginStart="12dp"/>
            <TextView
                android:id="@+id/payment_tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:text="$1000"
                android:fontFamily="@font/sen"
                android:textSize="24sp"
                android:textColor="#181C2E"
                android:textStyle="bold"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="8dp"/>
            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>
        </LinearLayout>
        <Button
            android:id="@+id/payment_btn_payAndConfirm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PAY &amp; CONFIRM"
            android:fontFamily="@font/sen"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            android:padding="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/rectangle_corner_radius_ff7622"
            app:backgroundTint="@null"
            android:clipToOutline="true"
            app:layout_constraintTop_toBottomOf="@+id/payment_ln_price"
            android:focusable="true"
            android:clickable="true"
            android:foreground="?attr/selectableItemBackground"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
