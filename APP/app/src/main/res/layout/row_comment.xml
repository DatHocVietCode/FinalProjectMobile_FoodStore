<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rectangle_stroke_ff7622"
    android:padding="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/row_comment_avatar"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/baseline_account_circle_24"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <LinearLayout
        android:id="@+id/row_comment_ln"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/row_comment_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            <TextView
                android:id="@+id/row_comment_tv_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="UserName rất dài rất dài rất dàidsadasdsadasd"
                android:fontFamily="@font/sen"
                android:textSize="16sp"
                android:layout_marginEnd="16dp"
                android:maxLines="1"
                android:ellipsize="end" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/i_star" />

            <TextView
                android:id="@+id/row_comment_rating_tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.7"
                android:fontFamily="@font/sen"
                android:gravity="bottom"
                android:textStyle="bold"
                android:textColor="#181C2E"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"/>
        </LinearLayout>
        <TextView
            android:id="@+id/row_comment_tv_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sen"
            android:textSize="16sp"
            android:text="aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaasdadasdasndadjakldjakls"
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_marginTop="4dp"/>
        <TextView
            android:id="@+id/row_comment_tv_dateCreated"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/sen"
            android:textSize="12sp"
            android:textStyle="italic"
            android:text="Datetime.Now"
            android:maxLines="3"
            android:ellipsize="end"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>