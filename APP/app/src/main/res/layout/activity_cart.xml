<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#121223">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#121223"
        android:layout_marginBottom="16dp">
        <LinearLayout
            android:id="@+id/cart_ln_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp">
            <fragment
                android:id="@+id/fragment_back_btn"
                android:name="com.example.app_foodstore.Fragment.Fragment_btnBack_white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cart"
                android:fontFamily="@font/sen"
                android:textSize="24sp"
                android:gravity="center"
                android:textColor="#FFFFFF"
                android:layout_gravity="center"
                />
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/cart_tv_edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="16sp"
                    android:text="@string/Edit_Cart"
                    android:fontFamily="@font/sen"
                    android:textColor="#FF7622"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    />
                <TextView
                    android:id="@+id/cart_tv_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:textSize="16sp"
                    android:text="DONE"
                    android:fontFamily="@font/sen"
                    android:textColor="#059C6A"
                    android:clickable="true"
                    android:focusable="true"
                    android:foreground="?attr/selectableItemBackground"
                    android:visibility="gone"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/cart_ln_header"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="24dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:fillViewport="true">
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cart_rc_items"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:nestedScrollingEnabled="false"/>
        </HorizontalScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.cardview.widget.CardView
        android:id="@+id/cart_cardView_bottomSheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:elevation="@dimen/design_bottom_sheet_modal_elevation"
        app:cardCornerRadius="32dp"
        android:paddingBottom="16dp"
        android:backgroundTint="#FFFFFF"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        android:layout_marginBottom="-24dp"
        android:padding="8dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="20dp">
            <ImageButton
                android:id="@+id/cart_cardView_bottomSheet_expandbtn"
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:src="@drawable/bottom_sheet_navigation"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:background="#FFFFFF"
                />
            <LinearLayout
                android:id="@+id/cart_ln_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp">
                <TextView
                    android:id="@+id/cart_tv_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="DELIVERY ADDRESS"
                    android:fontFamily="@font/sen"
                    android:textSize="12sp"
                    android:textColor="#A0A5BA"
                    android:layout_marginStart="16dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />
                <TextView
                    android:id="@+id/cart_tv_editAdress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="@string/Edit_Profile"
                    android:fontFamily="@font/sen"
                    android:textSize="14sp"
                    android:textColor="#FF7622"
                    android:layout_marginEnd="16dp"/>
            </LinearLayout>
            <EditText
                android:id="@+id/cart_et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/sen"
                android:singleLine="true"
                android:text="Đại học sư phạm kỹ thuật thành phố Hồ Chí Minh"
                android:background="@drawable/rectangle_corner_radius"
                android:padding="16sp"
                android:backgroundTint="#F0F5FA"
                android:textColor="#91959C"
                android:ellipsize="end"
                app:layout_constraintTop_toBottomOf="@+id/cart_ln_title"
                android:clickable="false"
                android:focusable="false"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="12dp"
                android:layout_marginTop="12dp"/>
            <LinearLayout
                android:id="@+id/cart_ln_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cart_et_address"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="12dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="TOTAL: "
                    android:fontFamily="@font/sen"
                    android:textSize="12sp"
                    android:textColor="#A0A5BA"
                    android:layout_marginStart="12dp"/>
                <TextView
                    android:id="@+id/cart_tv_total_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="$1000"
                    android:fontFamily="@font/sen"
                    android:textSize="20sp"
                    android:textColor="#181C2E"
                    android:textStyle="bold"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="8dp"/>
                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/cart_btn_breakDown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    android:fontFamily="@font/sen"
                    android:text="Breakdown"
                    android:textColor="#FF7622"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_next"/>
            </LinearLayout>
            <Button
                android:id="@+id/cart_btn_placeOrder"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="PLACE ORDER"
                android:fontFamily="@font/sen"
                android:textColor="@color/white"
                android:textSize="24dp"
                android:textStyle="bold"
                android:padding="12dp"
                android:layout_marginTop="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp"
                android:background="@drawable/rectangle_corner_radius_ff7622"
                app:backgroundTint="@null"
                android:clipToOutline="true"
                app:layout_constraintTop_toBottomOf="@+id/cart_ln_price"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView></androidx.coordinatorlayout.widget.CoordinatorLayout>
