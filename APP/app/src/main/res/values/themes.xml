<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.APP_FoodStore" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.APP_FoodStore" parent="Base.Theme.APP_FoodStore" >
        <item name="android:windowFullscreen">true</item> <!-- Ẩn status bar -->
        <item name="android:windowIsTranslucent">false</item> <!-- Đảm bảo rằng không trong suốt -->
    </style>
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner">
        <item name="android:popupBackground">@drawable/spinner_dropdown_bg</item>
    </style>
    <style name="BottomAppBarOverlay">
        <item name="colorControlNormal">#FFFFFF</item>
    </style>
    <!-- Tùy chỉnh màu DatePickerDialog / TimePickerDialog -->
    <style name="MyDatePickerDialogTheme" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimary">#FF7622</item>
        <item name="colorPrimaryVariant">#FF7622</item>
        <item name="colorAccent">#FF7622</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <!-- This will set a custom style to the dialog Button Positive-->
        <item name="android:buttonBarPositiveButtonStyle">@style/DialogButtonPositive</item>
        <!-- This will set a custom style to the dialog Button Negative-->
        <item name="android:buttonBarNegativeButtonStyle">@style/DialogButtonNegative</item>
    </style>
    <!-- Custom DatePicker Button Style-->
    <!-- styles.xml -->
    <style name="DialogButtonPositive" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FF7622</item>
        <item name="fontFamily">@font/sen</item>
    </style>
    <style name="DialogButtonNegative" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#FF7622</item>
        <item name="fontFamily">@font/sen</item>
    </style>

</resources>