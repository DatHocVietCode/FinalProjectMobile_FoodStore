<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangle_corner_radius_bg_f0f5fa"
    android:padding="16dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginTop="12dp"
    android:layout_marginBottom="12dp">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/item_row_address_img_type"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:src="@drawable/bg_home_location"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/item_row_address_tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="HOME"
        android:fontFamily="@font/sen"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/item_row_address_img_type"/>
    <ImageView
        android:id="@+id/item_row_address_img_delete"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/i_delete"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"/>
    <ImageView
        android:id="@+id/item_row_address_img_edit"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/i_edit"
        app:layout_constraintEnd_toStartOf="@+id/item_row_address_img_delete"
        app:layout_constraintTop_toTopOf="parent"
        android:clickable="true"
        android:focusable="true"
        android:layout_marginEnd="12dp"
        android:foreground="?attr/selectableItemBackground"/>
    <TextView
        android:id="@+id/item_row_address_tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:maxLines="2"
        app:layout_constraintTop_toBottomOf="@id/item_row_address_tv_type"
        app:layout_constraintStart_toEndOf="@id/item_row_address_img_type"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="Sá»‘ 1 VVN aaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaaa"
        android:textColor="#91959C"
        android:fontFamily="@font/sen"
        android:ellipsize="end"/>

</androidx.constraintlayout.widget.ConstraintLayout>