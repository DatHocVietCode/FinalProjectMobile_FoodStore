<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:elevation="4dp"
    app:cardCornerRadius="16dp"
    android:background="#FFFFFF"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:padding="12dp"
        android:orientation="vertical"
        android:gravity="center"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/dialog_rating_avatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                android:src="@drawable/baseline_account_circle_24" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:orientation="vertical">
                <LinearLayout
                    android:id="@+id/dialog_rating_ln_rating"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="8dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rate: "
                        android:fontFamily="@font/sen"
                        android:textColor="#FC6E2A"
                        android:textSize="20sp"/>
                    <ImageView
                        android:id="@+id/dialog_rating_star1"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/i_star_filled"/>
                    <ImageView
                        android:id="@+id/dialog_rating_star2"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/i_star_filled"/>
                    <ImageView
                        android:id="@+id/dialog_rating_star3"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/i_star_filled"/>
                    <ImageView
                        android:id="@+id/dialog_rating_star4"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/i_star"/>
                    <ImageView
                        android:id="@+id/dialog_rating_star5"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/i_star"/>
                </LinearLayout>
                <EditText
                    android:id="@+id/dialog_rating_et_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="200dp"
                    android:maxHeight="200dp"
                    android:scrollbars="vertical"
                    android:layout_margin="4dp"
                    android:background="@drawable/rectangle_bg_f6f8fa"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:fontFamily="@font/sen"
                    android:hint="Rating"
                    android:textSize="16sp"
                    android:padding="12dp"
                    android:gravity="top"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/dialog_rating_ln_rating"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/dialg_rating_ln_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/dialog_rating_et_comment"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:orientation="horizontal"
            android:layout_marginTop="12dp">
            <Button
                android:id="@+id/dialog_rating_btnCancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="#FF7622"
                android:background="@drawable/rectangle_corner_radius_stroke_ff7622"
                android:clipToOutline="true"
                app:backgroundTint="@null"
                android:layout_marginEnd="16dp"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"/>
            <Button
                android:id="@+id/dialog_rating_btnOK"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="OK"
                android:background="@drawable/rectangle_corner_radius_ff7622"
                android:clipToOutline="true"
                app:backgroundTint="@null"
                android:layout_marginStart="16dp"
                android:focusable="true"
                android:clickable="true"
                android:foreground="?attr/selectableItemBackground"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
